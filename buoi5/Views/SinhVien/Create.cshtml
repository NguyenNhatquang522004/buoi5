@model buoi5.Models.SinhVien

@{
    ViewData["Title"] = "Thêm sinh viên mới";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-user-plus"></i> Thêm sinh viên mới
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaSV" class="form-label">Mã sinh viên</label>
                                    <input asp-for="MaSV" class="form-control" placeholder="Nhập mã sinh viên">
                                    <span asp-validation-for="MaSV" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HoTen" class="form-label">Họ và tên</label>
                                    <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên">
                                    <span asp-validation-for="HoTen" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="GioiTinh" class="form-label">Giới tính</label>
                                    <select asp-for="GioiTinh" class="form-select" asp-items="ViewBag.GioiTinh">
                                        <option value="">Chọn giới tính</option>
                                    </select>
                                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NgaySinh" class="form-label">Ngày sinh</label>
                                    <input asp-for="NgaySinh" type="date" class="form-control">
                                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MaNganh" class="form-label">Ngành học</label>
                                    <select asp-for="MaNganh" class="form-select" asp-items="ViewBag.MaNganh">
                                        <option value="">Chọn ngành học</option>
                                    </select>
                                    <span asp-validation-for="MaNganh" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="imageFile" class="form-label">Ảnh đại diện</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

