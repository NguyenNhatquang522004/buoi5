@model buoi5.Models.SinhVien

@{
    ViewData["Title"] = "Xóa sinh viên";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa sinh viên
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-warning"></i> Bạn có chắc chắn muốn xóa sinh viên này không? Hành động này không thể hoàn tác!
                    </div>

                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.Hinh))
                        {
                            <img src="@Model.Hinh" alt="@Model.HoTen" class="rounded-circle"
                                 style="width: 100px; height: 100px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto"
                                 style="width: 100px; height: 100px;">
                                <i class="fas fa-user fa-2x text-white"></i>
                            </div>
                        }
                    </div>

                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th style="width: 40%;">Mã sinh viên:</th>
                                <td><strong>@Html.DisplayFor(model => model.MaSV)</strong></td>
                            </tr>
                            <tr>
                                <th>Họ và tên:</th>
                                <td><strong>@Html.DisplayFor(model => model.HoTen)</strong></td>
                            </tr>
                            <tr>
                                <th>Giới tính:</th>
                                <td>@Html.DisplayFor(model => model.GioiTinh)</td>
                            </tr>
                            <tr>
                                <th>Ngày sinh:</th>
                                <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                            </tr>
                            <tr>
                                <th>Ngành học:</th>
                                <td>@(Model.NganhHoc?.TenNganh ?? "Chưa có ngành")</td>
                            </tr>
                        </tbody>
                    </table>

                    <form asp-action="Delete" method="post" class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Hủy
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>